# Dockerfile backend
FROM node:20

WORKDIR /usr/src/app

ARG DB_HOST=${DB_HOST}
ENV DB_HOST=${DB_HOST}
ARG DB_USER=${DB_USER}
ENV DB_USER=${DB_USER}
ARG DB_PASSWORD=${DB_PASSWORD}
ENV DB_PASSWORD=${DB_PASSWORD}
ARG DB_NAME=${DB_NAME}
ENV DB_NAME=${DB_NAME}
ARG APP_PORT=${APP_PORT}
ENV APP_PORT=${APP_PORT}
ARG APP_SECRET=${APP_SECRET}
ENV APP_SECRET=${APP_SECRET}
ARG FRONTEND_UR=${FRONTEND_UR}
ENV FRONTEND_UR=${FRONTEND_UR}
ARG API_KEY=${API_KEY}
ENV API_KEY=${API_KEY}

COPY ./backend .

RUN npm install -g npm@10.2.0
RUN npm install

CMD [ "npm", "start" ]